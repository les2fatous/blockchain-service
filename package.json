{
  "name": "blockchain-voting-microservice",
  "version": "1.0.0",
  "description": "Microservice Node.js pour interaction avec Besu blockchain",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node test-step-by-step.js",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network besu",
    "benchmark:api": "node benchmark/load-test.js",
    "benchmark:api:small": "node benchmark/load-test.js --small",
    "benchmark:api:medium": "node benchmark/load-test.js --medium",
    "benchmark:api:large": "node benchmark/load-test.js --large"
  },
  "keywords": [
    "blockchain",
    "voting",
    "besu",
    "ethereum"
  ],
  "author": "Votre Nom",
  "license": "MIT",
  "dependencies": {
    "@noble/post-quantum": "^0.5.4",
    "big-integer": "^1.6.52",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "cli-progress": "^3.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.16.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ffjavascript": "^0.3.1",
    "helmet": "^7.1.0",
    "pqc-dilithium": "^0.2.0",
    "snarkjs": "^0.7.6"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "hardhat": "^3.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
